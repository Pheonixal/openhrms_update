<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="lab_medical_examination_kanban_view" model="ir.ui.view">
            <field name="name">lab.medical.examination.kanban</field>
            <field name="model">lab.medical.examination</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="patient"/>
                    <field name="physician_id"/>
                    <field name="permission"/>
                    <field name="examination_date"/>
                    <templates>
                    <div t-name="kanban-box"
                         class="oe_kanban_card oe_kanban_global_click">
                        <div>
                            <!--Kanban's header -->
                            <div class=" userStory__header-kanban">
                                <!--Button here-->
                                <div class="o_dropdown_kanban dropdown">
                                    <a role="button" class="dropdown-toggle o-no-caret btn" data-toggle="dropdown"
                                       href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                        <span class="fa fa-ellipsis-v"/>
                                    </a>
                                    <div class="dropdown-menu" role="menu">
                                        <a name="%(portal.portal_share_action)d" role="menuitem" type="action"
                                           class="dropdown-item fa fa-share">
                                            <span class="ml-3">Share</span>
                                        </a>
                                        <a t-if="widget.editable" role="menuitem" type="edit"
                                           class="dropdown-item fa fa-pencil-square-o">
                                            <span class="ml-3">Edit</span>
                                        </a>
                                        <a t-if="widget.editable" role="menuitem" type="delete"
                                           class="dropdown-item fa fa-times">
                                            <span class="ml-3">Delete</span>
                                        </a>
                                    </div>
                                </div>
                            <!-- End header -->
                            </div>

                            <!-- Kanban's us name -->
                            <div class="project__name-kanban  padding-name pr-1">
                                <t t-esc="record.patient.value"/>
                                <t t-esc="record.permission.value"/>
                                <t t-esc="record.physician_id.value"/>
                                <t t-esc="record.examination_date.value"/>
                            </div>
                        </div>
                    </div>
                </templates>
                </kanban>
            </field>
        </record>

        <record id="lab_medical_examination_form_view" model="ir.ui.view">
            <field name="name">lab.medical.examination.form</field>
            <field name="model">lab.medical.examination</field>
            <field name="arch" type="xml">
                <form string="Medical Examination">
                    <header>
                        <button name="confirm_examination" states="draft" string="Confirm" type="object" class="oe_highlight" />
                        <button name="test_examination" states="confirm" string="Test" type="object" class="oe_highlight" />
<!--                        <button name="create_invoice" states="completed" string="Create Invoice" type="object" class="oe_highlight"/>-->
                        <button name="cancel_examination" states="draft,confirm" string="Cancel" type="object"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,test,completed"/>
                    </header>
                    <sheet>
                        <widget name="web_ribbon" title="Granted" bg_color="bg-success" attrs="{'invisible': [('permission', '!=', 'granted')]}"/>
                        <widget name="web_ribbon" title="Denied" bg_color="bg-danger" attrs="{'invisible': [('permission', '!=', 'denied')]}"/>
                        <group>
                            <group>
                                <field name="patient" domain="[('is_patient','=',True)]" context="{'search_default_is_patient':1, 'default_is_patient':1, 'default_customer':1}"/>
                                <field name="physician_id" domain="[('is_physician','=',True)]" context="{'search_default_is_physician':1, 'default_is_physician':1}"/>
                            </group>
                            <group>
                                <field name="examination_date"/>
                                <field name="permission" invisible="0"/>
                            </group>
                        </group>
                        <notebook colspan="4">
                            <page string="Test lines" attrs="{'invisible': [('state', 'in', ['draft'])]}">
                                <group name="test" string="Testing">
                                    <field name="operating_pressure" attrs="{'required':[('state', 'not in', ['draft'])]}"/>
                                    <field name="arterial_pressure" attrs="{'required':[('state', 'not in', ['draft'])]}"/>
                                    <field name="pulse" attrs="{'required':[('state', 'not in', ['draft'])]}"/>
                                    <field name="temperature" attrs="{'required':[('state', 'not in', ['draft'])]}"/>
                                    <field name="alcohol_ppm" attrs="{'required':[('state', 'not in', ['draft'])]}"/>
                                    <field name="conclusion"/>
                                </group>
                            </page>
                            <page name="Note"
                                  string="Note">
                                <field name="comment"/>
                            </page>
                            <page name="health_code" string="Health Code">
                                <field name="content" widget="html"/>
                            </page>
                        </notebook>
                    </sheet>

                </form>
            </field>
        </record>

        <record id="lab_medical_examination_tree_view" model="ir.ui.view">
            <field name="name">ProjectName.lab_medical_examination.tree</field>
            <field name="model">lab.medical.examination</field>
            <field name="arch" type="xml">
                <tree string="Medical Examination">
                    <field name="patient"/>
                    <field name="physician_id"/>
                    <field name="examination_date"/>
                    <field name="permission"/>
                </tree>
            </field>
        </record>

        <record id="lab_medical_examination_search_view" model="ir.ui.view">
            <field name="name">lab.medical.examination.search</field>
            <field name="model">lab.medical.examination</field>
            <field name="arch" type="xml">
                <search string="ModelTitle">
                    <field name="patient" />
                    <field name="examination_date"/>
                    <field name="permission"/>
                    <field name="physician_id"/>
                    <group expand="1" string="Group By">
                        <filter name="patient" string="Patient"
                            domain="[]" context="{'group_by':'patient'}" />
                        <filter name="examination_date" string="Examination Date"
                            domain="[]" context="{'group_by':'examination_date'}" />
                        <filter name="permission" string="Permission"
                            domain="[]" context="{'group_by':'permission'}" />
                        <filter name="physician_id" string="Physician"
                            domain="[]" context="{'group_by':'physician_id'}" />
                    </group>
                </search>
            </field>
        </record>

        <record id="lab_medical_examination_act_window" model="ir.actions.act_window">
            <field name="name">Medical Examination</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">lab.medical.examination</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="search_view_id" ref="lab_medical_examination_search_view"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new Medical Examination.
                </p>
            </field>
        </record>

        <menuitem name="Medical Examination"
                  id="lab_medical_examination_menu"
                  parent="medical_lab_management.menu_root_lab"
                  action="lab_medical_examination_act_window"
                  groups="medical_lab_management.group_lab_management_user,medical_lab_management.group_lab_management_technician"
                  sequence="22" />

    </data>
</odoo>